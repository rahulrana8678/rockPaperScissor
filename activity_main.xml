<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F1E9E9"
    >

    <LinearLayout
        android:id="@+id/layoutUpper"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#3E6595"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/layout_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-48dp">


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            app:srcCompat="@drawable/titleba"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="31dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="bottom"
        android:background="#F8F1F1"



        android:orientation="vertical"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="16dp">


        <LinearLayout
            android:id="@+id/buttonsOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.903"
            tools:layout_editor_absoluteX="0dp">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_rock"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="110dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#D8EA27"
                android:text="ROCK"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_paper"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="110dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#D23529"
                android:text="PAPER"
                android:textColor="@color/white"
                android:textSize="22dp"
                app:cornerRadius="5dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_scissor"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
                android:layout_width="110dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#35C83B"
                android:text="SCISSOR"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:cornerRadius="5dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/textViewCopyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3E6595"
            android:gravity="center">

            <TextView
                android:id="@+id/Copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Copyright @RahulRana 2023. All legal rights reserved"
                android:textColor="@color/white"
                android:textSize="12dp"
                tools:layout_editor_absoluteX="177dp"


                tools:layout_editor_absoluteY="300dp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/imageViewlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:padding="12dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layoutUpper"
        app:layout_constraintVertical_bias="0.358">


        <ImageView
            android:id="@+id/myOutput"

            android:layout_width="160dp"
            android:layout_height="156dp"
            android:layout_gravity="right"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toTopOf="@+id/layout_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.661"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutUpper"
            app:layout_constraintVertical_bias="0.678" />

        <ImageView
            android:id="@+id/computerOutput"
            android:layout_width="160dp"
            android:layout_height="156dp"
            android:layout_gravity="right"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toTopOf="@+id/layout_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.661"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutUpper"
            app:layout_constraintVertical_bias="0.272" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/imageViewlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:padding="12dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layoutUpper"
        app:layout_constraintVertical_bias="0.258">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="160dp"
            android:layout_height="156dp"
            app:srcCompat="@drawable/user"
            tools:layout_editor_absoluteX="73dp"
            tools:layout_editor_absoluteY="232dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="You"

            android:textColor="#1A38E1"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="213dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/imageViewlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:padding="12dp"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layoutUpper"
        app:layout_constraintVertical_bias="0.565">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="160dp"
            android:layout_height="156dp"
            app:srcCompat="@drawable/computer"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="361dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:text="Computer"
            android:textColor="#1A38E1"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="213dp" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
